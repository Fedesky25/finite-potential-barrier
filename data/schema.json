{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Detail of a transmission plot",
    "type": "object",
    "patternProperties": {
        "energies": {
            "type": "object",
            "description": "Range values of energies for which compute the transmission",
            "properties": {
                "min": {
                    "type": "number",
                    "minimum": 0
                },
                "max": {
                    "type": "number",
                    "exclusiveMinimum": 0
                },
                "steps": {
                    "type": "number",
                    "minimum": 10
                }
            },
            "required": ["max"]
        },
        "plots": {
            "type": "array",
            "minItems": 1,
            "description": "Set of plot information",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Plot name"
                    },
                    "length": {
                        "type": "number",
                        "exclusiveMinimum": 0,
                        "description": "Barrier length"
                    },
                    "potential": {
                        "type": "number",
                        "exclusiveMinimum": 0,
                        "description": "Barrier potential"
                    },
                    "mass": {
                        "description": "Particle mass",
                        "anyOf": [
                            {
                                "type": "number",
                                "exclusiveMinimum": 0
                            },
                            {
                                "type": "string",
                                "enum": [
                                    "v_e", "electron neutrino",
                                    "v_m", "muon neutrino",
                                    "e", "electron",
                                    "u", "quark up",
                                    "d", "quark down",
                                    "v_t", "tau neutrino",
                                    "m", "muon",
                                    "p", "proton"
                                ]
                            }
                        ]
                    }
                },
                "required": ["name", "length", "potential"],
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false,
    "required": ["energies", "plots"]
}